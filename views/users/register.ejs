<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/font.css" />
<div class="container mt-5 mb-5 d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://source.unsplash.com/V3dHmb1MOXM"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-2">
                            <label class="form-label" for="username">
                              
                                Username
                            
                            </label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
  
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                        </div>
                        <div class="mb-5">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        
                        <div class="text-center">
                            <button class="btn btn-warning btn-block">Register</button>
                          </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>