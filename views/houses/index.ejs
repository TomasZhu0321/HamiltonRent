<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>
<div class="container">
<h1>All Houses</h1>
<div>
  <a href="/houses/new">Add Houses</a>
</div>
<% for (let house of houses){%>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <% if(house.images.length) {%>
      <img class="img-fluid" alt="" src="<%=house.images[0].url%>" />
    </div>
    <% }else{ %>
    <img class="img-fluid" alt="" src="" />
    <% } %>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= house.title %></h5>
        <p class="card-text"><%= house.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= house.location%></small>
        </p>
        <a class="btn btn-primary" href="/houses/<%=house._id%>"
          >View <%=house.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
</div>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const houses = { features: <%- JSON.stringify(houses) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>